@model AmazonSearch.Models.Product
@{
    ViewBag.Title = "ProductsView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products: </h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Picture</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td><img src="@Model.ImgURL"/></td>
            <td><h3>@Model.Name</h3></td>
            <td><h4>@Model.Price</h4></td>
        </tr>
    </tbody>
</table>