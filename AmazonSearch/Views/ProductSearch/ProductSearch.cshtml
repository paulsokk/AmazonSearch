@model Nager.AmazonProductAdvertising.Model.AmazonItemResponse
@{
    ViewBag.Title = "ProductSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProductSearch</h2>

<h2>Products: </h2>

@if (Model != null)
{


<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Picture</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        
            @if (Model.Items != null && Model.Items.Item != null)
            {
                int count = 1;
                <h4>Total pages: @Model.Items.TotalPages</h4>
                foreach (var item in Model.Items.Item)
                {
                    if (item.OfferSummary.LowestNewPrice != null)
                    {
                        <tr>
                            <td>@count</td>
                            <td><img src="@item.MediumImage" /></td>
                            <td><h4>@item.ItemAttributes.Title</h4></td>
                            <td><h4>@item.OfferSummary.LowestNewPrice.FormattedPrice</h4></td>
                        </tr>
                        count++;
                    }

                }
            }

                   
    </tbody>
</table>

    
}
else
{
    <h3>No result</h3>
}
