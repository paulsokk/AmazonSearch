@model Nager.AmazonProductAdvertising.Model.AmazonItemResponse
@{
    ViewBag.Title = "ProductSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model != null)
{
<h2>Search results: </h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Picture</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        
            @if (Model.Items != null && Model.Items.Item != null)
            {
                int count = 1;
                
                <h5>Current page: @ViewBag.Page</h5>

                foreach (var item in Model.Items.Item)
                {
                    if (item.OfferSummary.LowestNewPrice != null)
                    {
                        <tr>
                            <td>@count</td>
                            <td><img src="@item.MediumImage" /></td>
                            <td><h4><a href="@item.DetailPageURL">@item.ItemAttributes.Title</a></h4></td>
                            <td><h4>@item.OfferSummary.LowestNewPrice.FormattedPrice</h4></td>
                        </tr>
                        count++;
                    }

                }
            }

                   
    </tbody>
</table>

<h5>Current page: @ViewBag.Page</h5>

<ul class="pager">
    @{ if (ViewBag.Page > 1)
        {
            <li><a href="/ProductSearch/ProductSearch?keyword=@ViewBag.Search&page=@ViewBag.PrevPage">Previous</a></li>
        }
    }
    @{if (ViewBag.Page < 5)
        {
            <li><a href="/ProductSearch/ProductSearch?keyword=@ViewBag.Search&page=@ViewBag.NextPage">Next</a></li>
        }
    }
</ul>

}
else
{
    <h3>No result</h3>
}
